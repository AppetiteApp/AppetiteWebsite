
<div class="submitdish">

    <form align="center" ng-submit="submit(dish)">
        <p><label>Dish Name:</label><input type="text" ng-model="dish.dishName" placeholder="Dish" maxlength="20"></p>
        <p><label>Description:</label><input type="textarea" ng-model="dish.description" placeholder="Description"></p>
        <p><label>Price:</label><input type="text" ng-model="dish.price" placeholder="Price"></p>
        <p><label>Phone:</label><input type="text" ng-model="dish.phone" placeholder="Phone"></p>
        <p><label>Location:</label><input type="text" ng-model="dish.location" placeholder="Location"></p>
        <p><label>Pickup Time:</label>
        <input type="date" ng-model="dish.time" placeholder="Time"></p>
        <p><label>Portions:</label><input type="text" ng-model="dish.portion" placeholder="portion"></p>
        <p class="submit"><input type="submit" value="Submit Dish"></p>

    </form>
</div>
