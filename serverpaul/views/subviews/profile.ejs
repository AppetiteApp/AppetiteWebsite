<div id="profilebanner"></div>


  <img id="profilethumbnail" border-radius="10px" src="/imgs/gordon.jpg" />



    <div id="profilesection">
      <form ng-submit="editProfile(user)">

        <div id="profilename">
          <input class="nameinput" type='text' onkeypress="this.style.width = ((this.value.length + 1) * 20) + 'px';" ng-model="user.firstName" name="firstName" ng-class="{focus: focus, blur: blur}" ng-focus="focus=true;blur=false" ng-blur="focus=false;blur=true" ng-init="focus=false;blur=true" ng-change="user.changed=true"/>
          <input class="nameinput" type='text' onkeypress="this.style.width = ((this.value.length + 1) * 20) + 'px';" ng-model="user.lastName" name="lastName" ng-class="{focus: focus, blur: blur}" ng-focus="focus=true;blur=false" ng-blur="focus=false;blur=true" ng-init="focus=false;blur=true" ng-change="user.changed=true"/><br>
        </div>
        <div id="profileinfo">

          <textarea class="descriptioninput" placeholder="Tell us about yourself!" type='text' name="phone" ng-class="{focus: focus, blur: blur}" ng-focus="focus=true;blur=false" ng-blur="focus=false;blur=true" ng-init="focus=false;blur=true"/></textarea><br>

          <label for="phone" class="profilelabel">Phone:</label>
          <input class="profileinput" type='text' ng-model="user.phone" name="phone" ng-class="{focus: focus, blur: blur}" ng-focus="focus=true;blur=false" ng-blur="focus=false;blur=true" ng-init="focus=false;blur=true" ng-change="user.changed=true"/><br>

          <label class="profilelabel" for="firstName">Address:</label>
          <input class="profileinput" type='text' ng-model="user.location" name="adress" ng-class="{focus: focus, blur: blur}" ng-focus="focus=true;blur=false" ng-blur="focus=false;blur=true" ng-init="focus=false;blur=true" ng-change="user.changed=true"/><br>
          <input id='profileedit' type="submit" value="Save Edits" ng-show="user.changed" ng-init="user.changed=false"/>
      </form>
    </div>
</div>


<div id="profilecontainer">
  <div id="profileinnercontainer">
    <div id="repeateditem" ng-repeat="dish in user.dishes">
        <div id="listitem" ng-click="showDetails = !showDetails">

          <div id="dishbanner">
            <div class="dishthumbnail">
              <img class="img-thumbnail" src="/imgs/gordon.jpg" />
            </div>

            <div id="dishtitle">{{dish.dishName}}</div>
            <div id="dish.price">{{dish.price}}</div>
          </div>
        </div>
        <div ng-show="showDetails" id="itemdetails">
          <p align="center">{{dish.description}}</p>
          <div id="dish.time">{{dish.time}}</div>
          <div id="dish.phone">{{dish.phone}}</div>
          <div id="dish.address">{{dish.location}}</div>
        </div>
    </div>
  
  
  </div>

<div id="profileinstruction" text-align="center">
  Here's a list of the dishes you bought or sold this week!
</div>

